<div class="row">
  <div class="small-7 columns"></div>
  <div class="small-3 columns">
      <fieldset class="">
          <legend>Add a Budget</legend>
          <%= form_for(@budget) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, :required => true %>
            <%= f.submit "Create Budget", class: "button tiny radius form_button1" %>
          <% end %>
      </fieldset>
  </div>
</div>
<div class="row">
  <div class="small-2 columns"></div>
  <div class="small-8 columns">
    <h1>My Budgets</h1>
    <table>
      <tr>
        <th>Budget Name</th>
        <th>Last Modified</th>
        <th>Actions</th>
      </tr>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.name %></td>
        <td><%= budget.updated_at %></td>
        <td>
          <%= button_to "Edit", {action: "edit", id: budget.id}, method: :get,
                                            :class => 'button tiny radius' %>
        </td>
        <td>
          <%= button_to "Delete", { action: "delete", id: budget.id},
                                              method: :delete, data: { confirm: "Are you sure?" },
                                              :class => 'button tiny radius alert' %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>